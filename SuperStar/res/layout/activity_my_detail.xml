<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc"
    tools:context=".LoginActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp" >

                <EditText
                    android:id="@+id/nick"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:paddingLeft="90dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:text="昵    称"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/nick_ok"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp" >

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="90dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:text="邮    箱"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/email_ok"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp" >

                <EditText
                    android:id="@+id/workMode"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:clickable="true"/>
                
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:text="创业心态"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/chooseWorkMode"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/blue_btn_bg_selector"
                    android:text="请选择"
                    android:textColor="#eeeeee"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp" >

                <EditText
                    android:id="@+id/roleType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:clickable="true"/>
                
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:text="创业定位"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/chooseRoleType"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/blue_btn_bg_selector"
                    android:text="请选择"
                    android:textColor="#eeeeee"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp" >

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:clickable="true"/>
                
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:text="所在地区"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/chooseLocation"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/blue_btn_bg_selector"
                    android:text="请选择"
                    android:textColor="#eeeeee"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp" >

                <EditText
                    android:id="@+id/preAchieve"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="25dp"
                    android:gravity="top|left"
                    android:hint="请输入您的学习经历/工作经历/取得成就等信息。"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="个人描述"
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/preAchieve_ok"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/blue_btn_bg_selector"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:text="@string/done"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/progress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:visibility="gone" >

         <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>